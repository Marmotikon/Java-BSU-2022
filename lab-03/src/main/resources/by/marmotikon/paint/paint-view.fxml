<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="by.marmotikon.paint.PaintController"
            prefHeight="500.0" prefWidth="500.0">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Save" onAction="#onSave"/>
                    <MenuItem text="Exit" onAction="#onExit"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <HBox alignment="CENTER" spacing="20">
                    <Spinner fx:id="brushSize" min="1" max="50" initialValue="15"/>
                    <ColorPicker fx:id="brushColor" />
                    <CheckBox fx:id="eraser" text="eraser"/>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" width="500" height="500">
            <style>--fxbackground-color: FFF</style>
        </Canvas>
    </center>
</BorderPane>
